<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>ALL CLIENTS</h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                              <button class="btn btn-default" type="button">Go!</button>
                          </span>
          </div>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:600px;">
          <div class="x_title">
            <h2>You have <%= "#{Client.count}"%> Client(s)</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#">Settings 1</a>
                  </li>
                  <li><a href="#">Settings 2</a>
                  </li>
                </ul>
              </li>
              <li><a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_body">
          <table class="table client-all">
            <thead>
              <tr>
                <th>Correlativo</th>
                <th>Nombre</th>
                <th>Domicilio Fiscal</th>
                <th>Pagina Web</th>
                <th>Representante Legal</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
            <% Client.all.each do |client| %>
                <tr>
                <th scope="row"> <%= client.rec_id %> </th>
                <td><%= client.nombre %></td>
                <td><%= client.domicilio_fiscal %></td>
                <td> <a href="<%= client.pagina_web %>"> <%= client.pagina_web %></a></td>
                <td><%= client.representante_legal %></td>
                <td><%= client.correo %></td>
                <td><%= client.telefono %></td>
                <td> 

                  <a id="<%= client.rec_id %>" href="#" class="info_action" href=""><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                  <a href="<%= edit_admin_client_path(client.rec_id) %>" class="edit_action"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                  <a href="" class="erase_action"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
              </tr>
              
            <% end %>
            </tbody>
          </table>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>